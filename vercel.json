{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/public/$1" },
    { "src": "/ar", "dest": "/public/ar.html" },
    { "src": "/about", "dest": "/public/about.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
