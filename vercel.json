{
  "version": 2,
  "git": {
    "deploymentEnabled": {
      "main": false,
      "master": false
    }
  },
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/model-viewer", "destination": "/public/model-viewer.html" },
    { "source": "/model-viewer/:id", "destination": "/public/model-viewer.html?id=:id" },
    { "source": "/ar/:model", "destination": "/public/ar.html?model=:model" },
    { "source": "/sanchi", "destination": "/public/sanchi-ar.html" },
    { "source": "/sankranti", "destination": "/public/sankranti-ar.html" },
    { "source": "/kaaba", "destination": "/public/kaaba-ar.html" },
    { "source": "/ellora", "destination": "/public/ellora-ar.html" },
    { "source": "/about", "destination": "/public/about.html" },
    { "source": "/team", "destination": "/public/team.html" },
    { "source": "/downloads", "destination": "/public/downloads.html" },
    { "source": "/", "destination": "/public/index.html" },
    { 
      "source": "/(.*)", 
      "destination": "/public/404.html",
      "statusCode": 404
    }
  ]
}
